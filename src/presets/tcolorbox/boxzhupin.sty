\NewDocumentCommand{\bopin}{mm}{
    \tcbox[
		notitle,
		nobeforeafter,
		rounded corners=all,
		height=1.3em,
		boxsep=0em,
		top=.1em,
		bottom=.1em,
        left=-.15em,
        right=-.15em,
		tcbox raise=-3.14159265pt,
		valign=center,
        opacityframe=0,
        opacityback=0,
        opacityfill=0,
    ]{
		\tcbox[
			notitle,
			nobeforeafter,
			rounded corners=west,
			sharp corners=east,
			colback=blue!7.5,
			colframe=blue!50!black!20,
			boxrule=1pt,
			rightrule=0pt,
			height=1.3em,
			boxsep=0em,
			top=.1em,
			bottom=.1em,
			left=.2em,
			right=.2em,
			valign=center,
			rightrule=0pt,
			tcbox raise=0pt,
            right skip=-.134em,
		]{#1}
		\tcbox[
			notitle,
			nobeforeafter,
			rounded corners=east,
            sharp corners=west,
            colback=red!7.5,
            colframe=red!50!black!20,
			boxrule=1pt,
			leftrule=0pt,
			height=1.3em,
			boxsep=0em,
			top=.1em,
			bottom=.1em,
			left=.2em,
			right=.2em,
			valign=center,
            leftrule=0pt,
            tcbox raise=0pt,
            left skip=-.134em,
		]{#2}
    }
}
