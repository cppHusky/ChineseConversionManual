\NewDocumentCommand{\inlineinfo}{mm}{
    \tcbox[
		notitle,
		nobeforeafter,
		rounded corners=all,
		height=1.3em,
		boxsep=0em,
		top=.1em,
		bottom=.1em,
        left=-.15em,
        right=-.15em,
		tcbox raise=-3.14159265pt,
		valign=center,
        opacityframe=0,
        opacityback=0,
        opacityfill=0,
    ]{%
		\tcbox[
			notitle,
			nobeforeafter,
			rounded corners=west,
			sharp corners=east,
			colback=black,
			boxrule=0pt,
            arc=.5mm,
			rightrule=0pt,
			height=1.3em,
			boxsep=0em,
			top=.1em,
			bottom=.1em,
			left=.2em,
			right=.2em,
			valign=center,
			rightrule=0pt,
			tcbox raise=0pt,
		]{\sffamily\color{white}#1}%
		\tcbox[
			notitle,
			nobeforeafter,
			rounded corners=east,
            sharp corners=west,
            colback=lightgray,
			boxrule=0pt,
            arc=.5mm,
			leftrule=0pt,
			height=1.3em,
			boxsep=0em,
			top=.1em,
			bottom=.1em,
			left=.2em,
			right=.2em,
			valign=center,
            leftrule=0pt,
            tcbox raise=0pt,
		]{\sffamily\color{black}#2}%
    }
}
\NewDocumentCommand{\inlinelinkinfo}{mm}{
    \href{#1}{%
        \tcbox[
            notitle,
            nobeforeafter,
            rounded corners=all,
            height=1.3em,
            boxsep=0em,
            top=.1em,
            bottom=.1em,
            left=-.15em,
            right=-.15em,
            tcbox raise=-3.14159265pt,
            valign=center,
            opacityframe=0,
            opacityback=0,
            opacityfill=0,
        ]{%
            \tcbox[
                notitle,
                nobeforeafter,
                rounded corners=west,
                sharp corners=east,
                colback=black,
                boxrule=0pt,
                arc=.5mm,
                rightrule=0pt,
                height=1.3em,
                boxsep=0em,
                top=.1em,
                bottom=.1em,
                left=.2em,
                right=.2em,
                valign=center,
                rightrule=0pt,
                tcbox raise=0pt,
            ]{\sffamily\color{white}LINK}%
            \tcbox[
                notitle,
                nobeforeafter,
                rounded corners=east,
                sharp corners=west,
                colback=lightgray,
                boxrule=0pt,
                arc=.5mm,
                leftrule=0pt,
                height=1.3em,
                boxsep=0em,
                top=.1em,
                bottom=.1em,
                left=.2em,
                right=.2em,
                valign=center,
                leftrule=0pt,
                tcbox raise=0pt,
            ]{\sffamily\color{blue}#2}%
        }%
    }
}
