\definecolor{d2d2d2}{HTML}{d2d2d2}
\definecolor{aa2300}{HTML}{aa2300}
\RenewDocumentCommand{\quote}{mm}{
    \begin{tcolorbox}[
        natural height,
        enhanced,
        title={——#2},
        attach boxed title to bottom right={xshift=-5mm,yshift=2mm},
        boxed title style={colframe=aa2300},
        colback=d2d2d2,
        colbacktitle=aa2300,
        colframe=gray,
        leftright skip=1em,
    ]
        \textit{#1}
    \end{tcolorbox}
}
